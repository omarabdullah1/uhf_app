# Development Environment Configuration
# Copy this file to .env and update values for your development setup

# === Application Configuration ===
NODE_ENV=development
APP_NAME=UHF RFID System
APP_VERSION=1.0.0
APP_PORT=5000

# === Java Configuration ===
JAVA_HOME=/usr/lib/jvm/java-11-openjdk
JAVA_OPTS=-Xmx1024m -Xms512m
JAVA_CLASSPATH=build/libs/my-uhf-app.jar:libs/*
JAVA_MAIN_CLASS=com.myuhf.CommandLineMain

# === RFID Reader Configuration ===
# Default connection settings
RFID_CONNECTION_TYPE=serial
RFID_SERIAL_PORT=/dev/ttyUSB0
RFID_NETWORK_IP=192.168.99.200
RFID_NETWORK_PORT=8888
RFID_TIMEOUT=5000

# Power settings (0-30 dBm)
RFID_POWER_LEVEL=20
RFID_FREQUENCY=915.0
RFID_REGION=US

# === API Configuration ===
API_BASE_URL=http://localhost:5000
API_TIMEOUT=30000
API_RATE_LIMIT=100
API_CORS_ORIGIN=http://localhost:3000

# === React Client Configuration ===
REACT_APP_API_URL=http://localhost:5000
REACT_APP_WS_URL=ws://localhost:5000
REACT_APP_TITLE=UHF RFID System
REACT_APP_ENVIRONMENT=development

# === Database Configuration (if needed) ===
# DB_TYPE=sqlite
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=rfid_system
# DB_USER=rfid_user
# DB_PASSWORD=rfid_password
# DB_FILE=data/rfid.db

# === Logging Configuration ===
LOG_LEVEL=debug
LOG_DIR=logs
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5
LOG_CONSOLE=true

# === Security Configuration ===
# API_KEY=your-api-key-here
# JWT_SECRET=your-jwt-secret-here
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# === Development Tools ===
DEBUG=myuhf:*
BABEL_ENV=development
GENERATE_SOURCEMAP=true
SKIP_PREFLIGHT_CHECK=true

# === Native Library Configuration ===
NATIVE_LIB_PATH=native
JNA_LIBRARY_PATH=native:libs

# === Hardware Configuration ===
# Serial port settings
SERIAL_BAUD_RATE=115200
SERIAL_DATA_BITS=8
SERIAL_STOP_BITS=1
SERIAL_PARITY=none
SERIAL_FLOW_CONTROL=none

# Network settings
NETWORK_CONNECT_TIMEOUT=5000
NETWORK_READ_TIMEOUT=3000
NETWORK_RETRY_COUNT=3

# === Testing Configuration ===
TEST_TIMEOUT=10000
TEST_SERIAL_PORT=/dev/ttyUSB0
TEST_NETWORK_IP=192.168.99.200
TEST_MODE=simulation

# === Performance Configuration ===
JAVA_MAX_HEAP=1024m
JAVA_MIN_HEAP=512m
NODE_MAX_OLD_SPACE_SIZE=4096
UV_THREADPOOL_SIZE=4

# === Development Flags ===
ENABLE_HOT_RELOAD=true
ENABLE_MOCK_HARDWARE=false
ENABLE_DEBUG_LOGGING=true
ENABLE_PROFILING=false

# === File Paths ===
DATA_DIR=data
CONFIG_DIR=config
TEMP_DIR=temp
BACKUP_DIR=backups