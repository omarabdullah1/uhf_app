# Production Environment Configuration
# Copy this file to .env.production and update values for your production setup

# === Application Configuration ===
NODE_ENV=production
APP_NAME=UHF RFID System
APP_VERSION=1.0.0
APP_PORT=5000
APP_HOST=0.0.0.0

# === Java Configuration ===
JAVA_HOME=/usr/lib/jvm/java-11-openjdk
JAVA_OPTS=-Xmx2048m -Xms1024m -server -XX:+UseG1GC
JAVA_CLASSPATH=build/libs/my-uhf-app.jar:libs/*
JAVA_MAIN_CLASS=com.myuhf.CommandLineMain

# === RFID Reader Configuration ===
# Production hardware settings
RFID_CONNECTION_TYPE=network
RFID_SERIAL_PORT=/dev/ttyUSB0
RFID_NETWORK_IP=192.168.1.100
RFID_NETWORK_PORT=8888
RFID_TIMEOUT=10000

# Optimized power settings for production
RFID_POWER_LEVEL=25
RFID_FREQUENCY=915.0
RFID_REGION=US

# === API Configuration ===
API_BASE_URL=https://rfid-api.yourcompany.com
API_TIMEOUT=30000
API_RATE_LIMIT=1000
API_CORS_ORIGIN=https://rfid-app.yourcompany.com

# === React Client Configuration ===
REACT_APP_API_URL=https://rfid-api.yourcompany.com
REACT_APP_WS_URL=wss://rfid-api.yourcompany.com
REACT_APP_TITLE=UHF RFID System
REACT_APP_ENVIRONMENT=production

# === Database Configuration ===
DB_TYPE=postgresql
DB_HOST=db.yourcompany.com
DB_PORT=5432
DB_NAME=rfid_production
DB_USER=rfid_prod_user
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=20

# === Logging Configuration ===
LOG_LEVEL=info
LOG_DIR=/var/log/rfid-system
LOG_MAX_SIZE=50MB
LOG_MAX_FILES=10
LOG_CONSOLE=false
LOG_SYSLOG=true

# === Security Configuration ===
API_KEY=YOUR_PRODUCTION_API_KEY_HERE
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET_HERE
CORS_ORIGINS=https://rfid-app.yourcompany.com,https://admin.yourcompany.com
HTTPS_CERT_PATH=/etc/ssl/certs/rfid-system.crt
HTTPS_KEY_PATH=/etc/ssl/private/rfid-system.key

# === SSL/TLS Configuration ===
SSL_ENABLED=true
SSL_CERT_FILE=/etc/ssl/certs/certificate.pem
SSL_KEY_FILE=/etc/ssl/private/private-key.pem
SSL_CA_FILE=/etc/ssl/certs/ca-bundle.pem

# === Production Optimizations ===
DEBUG=false
BABEL_ENV=production
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false

# === Native Library Configuration ===
NATIVE_LIB_PATH=/opt/rfid-system/native
JNA_LIBRARY_PATH=/opt/rfid-system/native:/opt/rfid-system/libs

# === Hardware Configuration ===
# Production serial settings
SERIAL_BAUD_RATE=115200
SERIAL_DATA_BITS=8
SERIAL_STOP_BITS=1
SERIAL_PARITY=none
SERIAL_FLOW_CONTROL=none
SERIAL_TIMEOUT=5000

# Production network settings
NETWORK_CONNECT_TIMEOUT=10000
NETWORK_READ_TIMEOUT=5000
NETWORK_RETRY_COUNT=5
NETWORK_KEEPALIVE=true

# === Performance Configuration ===
JAVA_MAX_HEAP=4096m
JAVA_MIN_HEAP=2048m
NODE_MAX_OLD_SPACE_SIZE=8192
UV_THREADPOOL_SIZE=8
WORKER_PROCESSES=4

# === Monitoring Configuration ===
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true

# === Backup Configuration ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=/backup/rfid-system

# === File Paths ===
DATA_DIR=/var/lib/rfid-system
CONFIG_DIR=/etc/rfid-system
TEMP_DIR=/tmp/rfid-system
LOG_DIR=/var/log/rfid-system
PID_DIR=/var/run/rfid-system

# === System Integration ===
SYSTEMD_SERVICE=rfid-system
USER=rfid
GROUP=rfid
UMASK=0022

# === Clustering (if applicable) ===
CLUSTER_ENABLED=false
CLUSTER_NODE_ID=node-1
CLUSTER_REDIS_URL=redis://redis.yourcompany.com:6379

# === External Services ===
# Email notifications
SMTP_HOST=smtp.yourcompany.com
SMTP_PORT=587
SMTP_USER=notifications@yourcompany.com
SMTP_PASSWORD=YOUR_SMTP_PASSWORD
SMTP_FROM=RFID System <notifications@yourcompany.com>

# Message queue (if needed)
RABBITMQ_URL=amqp://rabbitmq.yourcompany.com:5672
QUEUE_NAME=rfid-events

# === Compliance & Audit ===
AUDIT_LOGGING=true
COMPLIANCE_MODE=true
DATA_RETENTION_DAYS=2555  # 7 years
GDPR_COMPLIANCE=true